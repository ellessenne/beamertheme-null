\ProvidesPackage{beamerthemenull}[2019/07/30]

\mode<presentation>

% Remove navigation tools
\beamertemplatenavigationsymbolsempty

% Set colours
\setbeamercolor{palette}{fg = black, bg = white}

\setbeamercolor{normal text}{parent = palette}
\setbeamercolor{math text}{parent = normal text}
\setbeamercolor{structure}{parent = palette}
\setbeamercolor{alert1}{parent = palette}
\setbeamercolor{title page}{parent = palette}
\setbeamercolor{title}{parent = palette}
\setbeamercolor{subtitle}{parent = palette}
\setbeamercolor{author}{parent = palette}
\setbeamercolor{institute}{parent = palette}
\setbeamercolor{date}{parent = palette}
\setbeamercolor{frametitle}{parent = palette}
\setbeamercolor{block title}{parent = palette}
\setbeamercolor{block body}{parent = palette}
\setbeamercolor{block title example}{parent = palette}
\setbeamercolor{block body example}{parent = palette}
\setbeamercolor{itemize item}{parent = palette}
\setbeamercolor{itemize subitem}{parent = palette}
\setbeamercolor{enumerate item}{parent = palette}
\setbeamercolor{enumerate subitem}{parent = palette}
\setbeamercolor{section in toc}{parent = palette}

% Set font
\let\textlozenge\relax
\usepackage[default]{gfsneohellenic}
\usepackage[LGR, T1]{fontenc}

% Customise font size
\setbeamerfont{title}{size = \huge}
\setbeamerfont{subtitle}{size = \Large}
\setbeamerfont{quote}{size = \Large}
\setbeamerfont{large text}{size = \large}
\setbeamerfont{date}{size = \small}
\setbeamerfont{author}{size = \large}
\setbeamerfont{institute}{size = \normalsize}
\setbeamerfont{section title}{size = \LARGE}
\setbeamerfont{frametitle}{size = \Large}
\setbeamerfont{block title}{size = \large}
\setbeamerfont{caption name}{size = \small}
\setbeamerfont{pagenumber}{size = \footnotesize}
\setbeamerfont{section in toc}{size = \Large}

% Section and subsection titles
\AtBeginSection[]{
      \begin{frame}[plain]
          \frametitle{Table of Content}
          \tableofcontents[currentsection]
      \end{frame}
      \addtocounter{framenumber}{-1}
}

\mode
<all>
